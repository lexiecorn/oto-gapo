{
  "name": "announcements",
  "type": "base",
  "schema": [
    {
      "name": "title",
      "type": "text",
      "required": true
    },
    {
      "name": "content",
      "type": "text",
      "required": true
    },
    {
      "name": "author",
      "type": "relation",
      "options": {
        "collectionId": "users",
        "cascadeDelete": false
      }
    },
    {
      "name": "isActive",
      "type": "bool",
      "default": true
    },
    {
      "name": "priority",
      "type": "select",
      "options": {
        "values": ["low", "medium", "high", "urgent"]
      },
      "default": "medium"
    },
    {
      "name": "attachments",
      "type": "file",
      "options": {
        "maxSelect": 5,
        "maxSize": 10485760,
        "mimeTypes": ["image/png", "image/jpeg", "application/pdf", "text/plain"]
      }
    },
    {
      "name": "expiryDate",
      "type": "date"
    }
  ],
  "indexes": [
    "CREATE INDEX idx_announcements_isActive ON announcements (isActive)",
    "CREATE INDEX idx_announcements_priority ON announcements (priority)",
    "CREATE INDEX idx_announcements_author ON announcements (author)"
  ]
}
