{
  "name": "announcements",
  "type": "base",
  "schema": [
    {
      "name": "title",
      "type": "text",
      "required": false
    },
    {
      "name": "content",
      "type": "text",
      "required": false
    },
    {
      "name": "type",
      "type": "select",
      "required": false,
      "options": {
        "maxSelect": 1,
        "values": ["general", "important", "urgent", "event", "reminder", "success"]
      }
    },
    {
      "name": "img",
      "type": "file",
      "required": false,
      "options": {
        "maxSelect": 1,
        "maxSize": 3242880,
        "mimeTypes": ["image/jpeg", "image/png", "image/svg+xml", "image/gif", "image/webp"],
        "thumbs": ["100x100t", "300x300t", "600x400t"]
      }
    },
    {
      "name": "showOnLogin",
      "type": "bool",
      "required": false,
      "default": false
    },
    {
      "name": "isActive",
      "type": "bool",
      "required": false,
      "default": true
    }
  ],
  "indexes": [
    "CREATE INDEX idx_announcements_type ON announcements (type)",
    "CREATE INDEX idx_announcements_showOnLogin ON announcements (showOnLogin)",
    "CREATE INDEX idx_announcements_isActive ON announcements (isActive)"
  ]
}
