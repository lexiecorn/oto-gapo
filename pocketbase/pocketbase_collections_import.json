        {
          "id": "key_field",
          "name": "key",
          "type": "text",
          "required": true,
          "unique": true
        },
        {
          "id": "value_field",
          "name": "value",
          "type": "json"
        },
        {
          "id": "description_field",
          "name": "description",
          "type": "text"
        },
        {
          "id": "category_field",
          "name": "category",
          "type": "select",
          "options": {
            "values": ["config", "feature_flags", "content", "settings"]
          },
          "default": "config"
        },
        {
          "id": "isActive_field",
          "name": "isActive",
          "type": "bool",
          "default": true
        }
      ],
      "indexes": [
        "CREATE INDEX idx_app_data_key ON app_data (key)",
        "CREATE INDEX idx_app_data_category ON app_data (category)",
        "CREATE INDEX idx_app_data_isActive ON app_data (isActive)"
      ]
