    {
      "id": "announcements",
      "name": "announcements",
      "type": "base",
      "system": false,
      "schema": [
        {
          "id": "title_field",
          "name": "title",
          "type": "text",
          "required": true
        },
        {
          "id": "content_field",
          "name": "content",
          "type": "text",
          "required": true
        },
        {
          "id": "author_field",
          "name": "author",
          "type": "relation",
          "options": {
            "collectionId": "users",
            "cascadeDelete": false
          }
        },
        {
          "id": "isActive_field",
          "name": "isActive",
          "type": "bool",
          "default": true
        },
        {
          "id": "priority_field",
          "name": "priority",
          "type": "select",
          "options": {
            "values": ["low", "medium", "high", "urgent"]
          },
          "default": "medium"
        },
        {
          "id": "attachments_field",
          "name": "attachments",
          "type": "file",
          "options": {
            "maxSelect": 5,
            "maxSize": 10485760,
            "mimeTypes": ["image/png", "image/jpeg", "application/pdf", "text/plain"]
          }
        },
        {
          "id": "expiryDate_field",
          "name": "expiryDate",
          "type": "date"
        }
      ],
      "indexes": [
        "CREATE INDEX idx_announcements_isActive ON announcements (isActive)",
        "CREATE INDEX idx_announcements_priority ON announcements (priority)",
        "CREATE INDEX idx_announcements_author ON announcements (author)"
      ]
    },
    {
